<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <com.example.testandroid.CustomImageView 
        android:id="@+id/customImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button android:id="@+id/btnLifeCycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LifeCycleActivity" />
    <Button android:id="@+id/btnWindowSoftInputModeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WindowSoftInputModeActivity"/>
    <Button android:id="@+id/btnActivityAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ActivityAnimation"/>
    <Button android:id="@+id/btnViewTree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewTree"/>

</LinearLayout>
